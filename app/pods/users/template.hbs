{{outlet}}

{{#if (is-admin session.currentUser)}}

  <h3>Users:</h3>

  <ul>
    {{#each model.users as |user|}}
        <li>
            <ul>
                <li>Image: <img src="{{user.picture}}" width="100" height="100"></li>
                <li>Family Name: {{user.family_name}}</li>
                <li>Given Name: {{user.given_name}}</li>
                <li>Gender: {{user.gender}}</li>
                <li>Link: {{user.link}}</li>
                <li>Locale: {{user.locale}}</li>
                <li>Full Name: {{user.name}}</li>
                <li>Role: {{user.role.name}}</li>
                {{#x-select value=user.role action=(action "changeRole" user model.users)}}
                  {{#each model.roles as |role|}}
                    {{#x-option value=role selected=(eq role.id user.role.id)}}
                      {{role.name}}
                    {{/x-option}}
                  {{/each}}
                {{/x-select}}
                <li>Last visit: {{date-string user.last_visit}}</li>
            </ul>
        </li>
    {{/each}}
  </ul>

  <h3>Roles:</h3>

  <ul>
    {{#each model.roles as |role|}}
        <li>
            <ul>
                <li>Role ID: {{role.id}}</li>
                <li>Role Name: {{role.name}}</li>
                <li>Role Type: {{role.type}}</li>
            </ul>
        </li>
    {{/each}}
  </ul>

{{/if}}